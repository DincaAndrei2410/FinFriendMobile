<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinFriend.Views.RealEstateCreditsPage"
             Padding="16, 32, 16, 0"
             Title="Variante de credite ipotecare"
             BackgroundColor="{StaticResource GreyBackground}">

    <StackLayout>
        <ListView x:Name="CreditsListView" ItemsSource="{Binding RealEstateCredits}" ItemTapped="Handle_ItemTapped" CachingStrategy="RecycleElement">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout>
                <Label Text="{Binding BankName}"/>
                <Label Text="{Binding SimulatorURL}"/>
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
